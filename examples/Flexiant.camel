				value: string value 'https://api.sd1.flexiant.net:4442'
				value type: FlexiantModel.FlexiantType.StringValueType
			}
		}
		sub-features {
			feature VM {
				attributes {
					attribute VMType {
						value type: FlexiantModel.FlexiantType.VMTypeEnum
					}
					attribute VMOS {
