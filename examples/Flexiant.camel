				value: string value 'IaaS' 
				value type: FlexiantModel.FlexiantType.StringValueType
			}
			attribute Availability {
				unit type: PERCENTAGE
				value: string value '99'
				value type: FlexiantModel.FlexiantType.StringValueType
			}
			attribute Driver {
				value: string value flexiant
				value type: FlexiantModel.FlexiantType.StringValueType
			}
