					}
					attribute VMImageId {
						value type: FlexiantModel.FlexiantType.VMImageIdEnum
					}
					attribute VMMemory {
						unit type: MEGABYTES
						value type: FlexiantModel.FlexiantType.MemoryList
					}
					attribute VMStorage {
